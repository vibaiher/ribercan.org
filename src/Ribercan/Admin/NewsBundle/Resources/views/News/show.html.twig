{% extends '::admin-base.html.twig' %}

{% block body -%}
    <h1>Announcement</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td id="announcement_id">{{ announcement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td id="announcement_title">{{ announcement.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td id="announcement_summary">{{ announcement.summary }}</td>
            </tr>
            <tr>
                <th>Published at</th>
                <td id="announcement_published_at">{{ announcement.publishedAt|date('d/m/Y') }}</td>
            </tr>
        </tbody>
    </table>

    {% if announcement.body %}
      <div class="body" style="margin-bottom: 10px;">
        <h3>Body</h3>
        <div id="announcement_body">{{ announcement.body|raw }}</div>
      </div>
    {% endif %}

    {% if announcement.image %}
      <section id="images">
        <header>
          <h2>Im√°genes (1)</h2>
        </header>
        <div class="row">
          <div class="col-lg-4 col-md-6">
            <img id="announcement_image" alt="{{ announcement.image.name }}" src="{{ announcement.image.webPath }}" class="img-thumbnail">
          </div>
        </div>
      </section>
    {% endif %}

    <ul class="record_actions">
      <li>
          <a href="{{ path('admin_news_index') }}">
              Back to the list
          </a>
      </li>
      <li>
          <a href="{{ path('admin_announcement_edit', { 'id': announcement.id }) }}">
              Edit
          </a>
      </li>
      <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
