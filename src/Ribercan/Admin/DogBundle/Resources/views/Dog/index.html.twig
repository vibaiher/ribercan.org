{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Dog list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Sex</th>
                <th>Birthday</th>
                <th>Joindate</th>
                <th>Health</th>
                <th>Godfather</th>
                <th>Description</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('dog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.sex }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.joinDate %}{{ entity.joinDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.health }}</td>
                <td>{{ entity.godfather }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.size }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('dog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('dog_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('dog_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
