{% extends '::admin-base.html.twig' %}
{% block section_title %}Perros en adopci√≥n{% endblock %}

{% block body -%}
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Sex</th>
          <th>Birthday</th>
          <th>Joindate</th>
          <th>Health</th>
          <th>Godfather</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in entities %}
          <tr>
            <td><a href="{{ path('dog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.sex }}</td>
            <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d') }}{% endif %}</td>
            <td>{% if entity.joinDate %}{{ entity.joinDate|date('Y-m-d') }}{% endif %}</td>
            <td>{{ entity.health }}</td>
            <td>{{ entity.godfather }}</td>
            <td>
              <ul class="list-inline">
                <li>
                  <a href="{{ path('ribercan_dog_show', { 'id': entity.id }) }}">Ver</a>
                </li>
                <li>
                  <a href="{{ path('dog_edit', { 'id': entity.id }) }}">Editar</a>
                </li>
              </ul>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
