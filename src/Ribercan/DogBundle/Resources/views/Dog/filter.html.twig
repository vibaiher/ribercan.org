{% form_theme form 'form/fields.html.twig' %}

{% set filter_form_header = filter_form_header|default('') %}
{{ form_start(form, { 'attr': { 'class': 'form--search' } }) }}
  {{ filter_form_header }}

  {{ form_errors(form) }}

  <div class=main>
    <ul class=list--search-filters>
      <li>
        {{ form_label(form.sex) }}

        <div class="button dropdown">
          {{ form_errors(form.sex) }}
          {{ form_widget(form.sex) }}
        </div>
      </li>

      <li>
        {{ form_label(form.age) }}

        <div class="button dropdown">
          {{ form_errors(form.age) }}
          {{ form_widget(form.age) }}
        </div>
      </li>

      <li>
        {{ form_label(form.size) }}

        <div class="button dropdown">
          {{ form_errors(form.size) }}
          {{ form_widget(form.size) }}
        </div>
      </li>

      <li>
          {{ form_widget(form.submit) }}
      </li>
    </ul>
  </div>
{{ form_end(form) }}
