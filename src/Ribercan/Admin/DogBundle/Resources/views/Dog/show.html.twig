{% extends '::admin-base.html.twig' %}

{% block body -%}
    <h1>Dog</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dog.name }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ dog.sex }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ dog.birthday|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Joindate</th>
                <td>{{ dog.joinDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Sterilized</th>
                <td>{{ dog.sterilized }}</td>
            </tr>
            <tr>
                <th>Godfather</th>
                <td>{{ dog.godfather }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dog.description }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ dog.size }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_dogs') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_dog_edit', { 'id': dog.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
