<article class="animal">
  <a href="{{ path('dog_in_adoption', { id: dog.id }) }}">
    <figure class="pic">
      <img src="/{{ dog.mainImage }}">
    </figure>
    <div class="main">
      <p class="name" data-title="Nombre">
        {{ dog.sex ? '<span class="female">♀</span>' : '<span class="male">♂</span>' }} {{ dog.name }}
      </p>
      <ul class="metadata">
        <li class="age" data-title="Edad">{{ dog.age }}</li>
        <li class="size" data-title="Tamaño">{{ dog.sizeShortFormat }}</li>
        <li class="sterilized" data-title="Esterilizado">
          {{ dog.sterilized ? 'X' : '' }}
        </li>
      </ul>
    </div>
  </a>
</article>
