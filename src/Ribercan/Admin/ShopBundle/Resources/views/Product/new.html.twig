{% extends '::admin-base.html.twig' %}

{% block header_javascripts %}
  <script src="/assets/vendor/trix/dist/trix.js"></script>
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="/assets/vendor/trix/dist/trix.css">
{% endblock %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block section_title %}Añadir un producto{% endblock %}

{% block body -%}
  {{ form_start(form) }}
    <section class="product-information">
      <header>
        <h2>Información relevante</h2>
      </header>
      <div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_label(form.available) }}
            {{ form_widget(form.available) }}
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_label(form.description) }}
            <div class="hide">{{ form_widget(form.description) }}</div>
            <trix-editor input="product_description"></trix-editor>
          </div>
        </div>
      </div>
    </section>

    <section class="product-media">
      <header>
        <h2>Imágenes</h2>
      </header>
      <div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_label(form.uploadedImages) }}
            {{ form_widget(form.uploadedImages) }}
          </div>
        </div>
      </div>
    </section>

    <div class="pull-right">
      <input type="submit" class="btn btn-primary" value="Publish" />
      <a href="{{ path('admin_news_index') }}" class="btn btn-warning">Cancelar</a>
    </div>
  {{ form_end(form) }}
{% endblock %}
